<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.example.pe_assignment.login.Register2Fragment"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="myViewModel"
            type="com.example.pe_assignment.login.RegisterViewModel" />
        <variable
            name="register2Fragment"
            type="com.example.pe_assignment.login.Register2Fragment" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="30sp"
                android:text="@string/learn_more_about_you"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Card_View"
                app:cardBackgroundColor="#F2F0F1"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Card_Title"
                        android:background="@color/input_purple"
                        android:text="@string/personal_information" />


                    <TextView
                        android:id="@+id/register_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Card_Title02"
                        android:text="@string/name" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="@dimen/card_title_padding_left_right"
                        android:paddingStart="10dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/register_name_ic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:src="@drawable/register_name_ic" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/card_title_padding_left_right"
                            android:paddingStart="@dimen/card_title_padding_left_right"
                            android:padding="10dp"
                            android:textSize="15dp"
                            android:id="@+id/user_name"
                            android:hint="@string/tell_us_your_name"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_toEndOf="@id/register_name_ic" />
                    </RelativeLayout>
<!--                    android:text="@={myViewModel.inputName}"-->

                    <TextView
                        android:id="@+id/register_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Card_Title02"
                        android:text="@string/age" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="9dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/white">

                        <ImageView
                            android:id="@+id/register_age_ic"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/register_age_ic"
                            android:scaleX="0.8"
                            android:scaleY="0.8" />

                        <ImageButton
                            android:id="@+id/register_age_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_toEndOf="@+id/register_age_ic"
                            android:src="@drawable/register_age_minus"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:layout_marginLeft="20dp" />

                        <EditText
                            android:id="@+id/register_age_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/register_age_minus"
                            android:layout_marginTop="7dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="24sp"
                            android:fontFamily="@font/roboto" />
<!--                        android:text="@={myViewModel.inputAge}"-->

                        <ImageButton
                            android:id="@+id/register_age_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:layout_toEndOf="@+id/register_age_num"
                            android:src="@drawable/register_age_add"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:layout_marginLeft="10dp" />
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <Button
            android:id="@+id/register_btn2"
            android:layout_width="@dimen/btn_grey_width"
            android:layout_height="@dimen/btn_grey_height"
            android:layout_marginTop="450dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_selector"
            android:textColor="@color/btn_text"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:onClick="@{()->register2Fragment.goToNextScreen()}"
            android:textSize="@dimen/btn_text"
            android:text="Next" />

    </FrameLayout>
</layout>