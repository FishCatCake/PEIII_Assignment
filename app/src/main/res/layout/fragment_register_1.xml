<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login.Register1Fragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:textSize="30sp"
                android:text="Create a new account"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit_bcg"
                android:padding="20dp"
                android:drawableStart="@drawable/ic_account"
                android:hint="studiodpop@gmail.com"
                android:drawablePadding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit_bcg"
                android:padding="20dp"
                android:drawableStart="@drawable/ic_password"
                android:hint="********"
                android:drawablePadding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:paddingLeft="10dp"
                android:text="Password must be more than 6 characters and contain uppercase and lowercase letters"
                android:textSize="12sp"
                android:textColor="#979797" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_edit_bcg"
                android:padding="20dp"
                android:drawableStart="@drawable/ic_password"
                android:hint="Enter the password again"
                android:drawablePadding="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="Or"
                android:textSize="12sp"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/icon_google"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_horizontal"/>
                <ImageButton
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:src="@drawable/icon_twitter"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_btn1"
                android:background="@drawable/login_btn_bcg"
                android:text="Next"
                android:textAllCaps="false"
                android:textSize="21sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"/>


        </LinearLayout>
</FrameLayout>