<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BreastCancerRecord02Fragment">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_anchor="@+id/linearLayout_cancer02"
        app:layout_anchorGravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="@string/cancer_card_text02"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#CBCACA"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="200dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EAE8EA">

                <TextView
                    android:id="@+id/card_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/input_card_red"
                    android:gravity="center_vertical"
                    android:paddingStart="20dp"
                    android:text="@string/cancer_symptoms"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/card_attr1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"
                    android:text="@string/breast_lumps"
                    android:textColor="@color/black"
                    android:paddingEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>

                <RadioButton
                    android:id="@+id/card_attr2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"
                    android:text="@string/breast_pain"
                    android:paddingEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>

                <RadioButton
                    android:id="@+id/card_attr3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"
                    android:text="@string/change_in_breast_shape"
                    android:paddingEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>

                <RadioButton
                    android:id="@+id/card_attr4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"
                    android:text="@string/sunken_skin"
                    android:paddingEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>

                <RadioButton
                    android:id="@+id/card_attr5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"
                    android:text="@string/fluid_in_nipples"
                    android:paddingEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>
                <RadioButton
                    android:id="@+id/card_attr6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_text"
                    android:layoutDirection="rtl"
                    android:layout_gravity="start"
                    android:text="@string/other"
                    android:paddingEnd="20sp"
                    android:layout_marginStart="20sp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line_horizontal_card"/>
            </RadioGroup>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/next_btn"
        android:layout_width="312dp"
        android:layout_height="55dp"
        android:layout_marginTop="-80dp"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:textColor="@color/btn_text"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/next" />
    </LinearLayout>
</FrameLayout>