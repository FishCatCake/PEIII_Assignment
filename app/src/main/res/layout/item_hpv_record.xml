<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
<androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/record_txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/record_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/record_txt1"
            android:layout_marginStart="35dp"
            android:text="Gardasil 9,\n 9vHPV"
            android:textSize="16sp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/record_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/record_txt2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="2021.12.1"
            android:textSize="16sp"
            android:padding="10dp"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_horizontal"
        android:scaleY="2" />
</androidx.appcompat.widget.LinearLayoutCompat>