<?xml version="1.0" encoding="utf-8"?>
<layout>
   <data>
       <variable
           name="periodViewModel"
           type="com.example.pe_assignment.cycle.PeriodViewModel" />
       <variable
           name="cycleTemperatureFragment"
           type="com.example.pe_assignment.cycle.CycleTemperatureFragment" />
   </data>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".cycle.CycleTemperatureFragment">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginVertical="150dp"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Card_View"
            app:cardBackgroundColor="#CBCACA"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_content_bg"
                android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Card_Title"
                        android:background="@color/input_card_orange"
                        android:text="@string/period"/>
                <EditText
                    android:id="@+id/cycle_temp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:paddingEnd="@dimen/card_title_padding_left_right"
                    android:paddingStart="@dimen/card_title_padding_left_right"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:hint="@string/hint_temp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/btn_done_temp"
        android:layout_marginTop="600dp"
        android:onClick="@{()->cycleTemperatureFragment.goToNextScreen()}"
        android:layout_width="@dimen/btn_grey_width"
        android:layout_height="@dimen/btn_grey_height"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_selector"
        android:textColor="@color/btn_text"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="@dimen/btn_text"
        android:text="@string/done" />


</FrameLayout>
</layout>