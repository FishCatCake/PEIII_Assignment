<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".VaccineCountdownFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center">
        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ImageButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                android:src="@drawable/btn_back"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/back"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/hpv_vaccine_track"/>
            <ImageButton
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/title"
                android:src="@drawable/btn_other"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:id="@+id/left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/left_arrow"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:id="@+id/record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/left_arrow"
                android:paddingLeft="80dp"
                android:paddingRight="80dp"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:text="@string/vaccine_reminder"/>
            <ImageButton
                android:id="@+id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/record_name"
                android:background="@drawable/right_arrow"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/right_arrow"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/vaccine_countdown"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="20dp"
                    android:background="@color/input_card_orange"
                    android:gravity="center_vertical"
                    android:text="@string/next_dose"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"/>

                <ImageView
                    android:id="@+id/countdown_1"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/vaccine_countdown_card"/>

                <ImageView
                    android:id="@id/countdown_2"
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_toEndOf="@+id/countdown_1"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/vaccine_countdown_card"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="110dp"
                    android:layout_toEndOf="@+id/countdown_2"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/vaccine_countdown_card"/>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="45dp"
                    android:text="@string/_0"
                    android:textStyle="bold"
                    android:textColor="#696565"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_toEndOf="@id/countdown_1"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/_0"
                    android:textStyle="bold"
                    android:textColor="#696565"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_toEndOf="@id/countdown_2"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/_7"
                    android:textStyle="bold"
                    android:textColor="#696565"
                    android:textSize="50sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:layout_below="@id/countdown_2"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/days"
                    android:textColor="#696565"
                    android:textSize="30sp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/reminder"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />


    </LinearLayout>

</FrameLayout>