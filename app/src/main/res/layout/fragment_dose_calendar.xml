<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DoseCalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/hpv_input_header"/>
    <ImageView
        android:id="@+id/hpv_process"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/hpv_3_1"/>
    <TextView
        android:id="@+id/hpv_dose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:text="@string/date_of_first_n_dose_onset"
        android:textSize="20sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="431dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_record"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/calendar_item" />
        </RelativeLayout>
        <Button
            android:id="@+id/next_btn1"
            android:layout_width="312dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:textColor="@color/btn_text"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/next" />

    </LinearLayout>

</FrameLayout>