<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Register3Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textSize="30sp"
            android:text="Set now or modify later"
            android:textColor="#000000"
            android:textStyle="bold"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            app:cardBackgroundColor="#F2F0F1"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                    <TextView
                        android:id="@+id/card_title"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="22.2dp"
                        android:background="#3C4874"
                        android:gravity="center_vertical"
                        android:text="@string/settings"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/register_title1"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:layout_marginTop="2dp"
                        android:text="@string/personal_customization"
                        android:paddingStart="22.2dp"
                        android:gravity="center_vertical"
                        android:textColor="#CBCACA"
                        android:textSize="18sp"/>

                    <RadioButton
                        android:id="@+id/register_ratio_btn1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:buttonTint="#EAE8EA"
                        android:background="#EAE8EA"
                        android:drawablePadding="20dp"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:text="@string/period_prediction_reminder"
                        android:padding="-7.8dp"
                        android:paddingEnd="20dp"
                        android:textColor="#9C999A"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/register_title2"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@color/white"
                        android:layout_marginTop="2dp"
                        android:text="@string/system_settings"
                        android:paddingStart="22.2dp"
                        android:gravity="center_vertical"
                        android:textColor="#CBCACA"
                        android:textSize="18sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EAE8EA">

                    <TextView
                        android:id="@+id/register_title2.2"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginTop="2dp"
                        android:text="Language"
                        android:paddingStart="22.2dp"
                        android:gravity="center_vertical"
                        android:textColor="#9C999A"
                        android:textSize="15sp"/>

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/register_title2.2"
                        android:layout_marginLeft="57dp"
                        android:layout_marginTop="9dp"/>
                    </RelativeLayout>


                    <RadioButton
                        android:id="@+id/register_ratio_btn2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:buttonTint="#EAE8EA"
                        android:background="#EAE8EA"
                        android:drawablePadding="20dp"
                        android:drawableEnd="@android:drawable/btn_radio"
                        android:text="@string/syc_with_huawei_health"
                        android:paddingStart="-7.8dp"
                        android:paddingEnd="20dp"
                        android:textColor="#9C999A"
                        android:textSize="15sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_btn_bcg"
            android:text="Start record journey!"
            android:id="@+id/register_btn3"
            android:textAllCaps="false"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>


    </LinearLayout>

</FrameLayout>